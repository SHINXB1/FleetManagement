<Window x:Class="FleetManagement.AddRouteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Route" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Vehicle ID:" Margin="0,5"/>
        <TextBox x:Name="VehicleIdTextBox" Margin="0,5"/>

        <TextBlock Text="Driver ID:" Margin="0,5"/>
        <TextBox x:Name="DriverIdTextBox" Margin="0,5"/>

        <TextBlock Text="Start Date:" Margin="0,5"/>
        <TextBox x:Name="StartDateTextBox" Margin="0,5"/>

        <TextBlock Text="End Date:" Margin="0,5"/>
        <TextBox x:Name="EndDateTextBox" Margin="0,5"/>

        <TextBlock Text="Start Location:" Margin="0,5"/>
        <TextBox x:Name="StartLocationTextBox" Margin="0,5"/>

        <TextBlock Text="End Location:" Margin="0,5"/>
        <TextBox x:Name="EndLocationTextBox" Margin="0,5"/>

        <TextBlock Text="Distance (km):" Margin="0,5"/>
        <TextBox x:Name="DistanceTextBox" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Add" Width="80" Margin="5" Click="AddButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>