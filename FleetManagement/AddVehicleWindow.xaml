<Window x:Class="FleetManagement.AddVehicleWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Vehicle" Height="300" Width="400">
    <Grid>
        <Label Content="License Plate:" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="LicensePlateTextBox" Margin="120,10,10,0" VerticalAlignment="Top"/>

        <Label Content="Model:" Margin="10,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="ModelTextBox" Margin="120,50,10,0" VerticalAlignment="Top"/>

        <Label Content="Manufacturer:" Margin="10,90,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="ManufacturerTextBox" Margin="120,90,10,0" VerticalAlignment="Top"/>

        <Label Content="Year of Manufacture:" Margin="10,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="YearOfManufactureTextBox" Margin="120,130,10,0" VerticalAlignment="Top"/>

        <Label Content="Mileage:" Margin="10,170,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="MileageTextBox" Margin="120,170,10,0" VerticalAlignment="Top"/>

        <Label Content="Status:" Margin="10,210,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox Name="StatusComboBox" Margin="120,210,10,0" VerticalAlignment="Top">
            <ComboBoxItem Content="Available"/>
            <ComboBoxItem Content="In Repair"/>
        </ComboBox>

        <Button Content="Add" Margin="10,250,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="AddButton_Click"/>
        <Button Content="Cancel" Margin="120,250,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="CancelButton_Click"/>
    </Grid>
</Window>