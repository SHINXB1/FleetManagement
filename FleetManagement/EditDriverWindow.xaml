<Window x:Class="FleetManagement.EditDriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Driver" Height="250" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Full Name:" Margin="0,5"/>
        <TextBox x:Name="FullNameTextBox" Margin="0,5"/>

        <TextBlock Text="License Number:" Margin="0,5"/>
        <TextBox x:Name="LicenseNumberTextBox" Margin="0,5"/>

        <TextBlock Text="Phone Number:" Margin="0,5"/>
        <TextBox x:Name="PhoneNumberTextBox" Margin="0,5"/>

        <TextBlock Text="Experience (years):" Margin="0,5"/>
        <TextBox x:Name="ExperienceTextBox" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Save" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>