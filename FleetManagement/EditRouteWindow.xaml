<Window x:Class="FleetManagement.EditRouteWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Route" Height="400" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Vehicle ID:" />
            <TextBox Name="VehicleIdTextBox" />

            <TextBlock Text="Driver ID:" />
            <TextBox Name="DriverIdTextBox" />

            <TextBlock Text="Start Date:" />
            <TextBox Name="StartDateTextBox" />

            <TextBlock Text="End Date:" />
            <TextBox Name="EndDateTextBox" />

            <TextBlock Text="Start Location:" />
            <TextBox Name="StartLocationTextBox" />

            <TextBlock Text="End Location:" />
            <TextBox Name="EndLocationTextBox" />

            <TextBlock Text="Distance:" />
            <TextBox Name="DistanceTextBox" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Save" Width="80" Margin="5" Click="SaveButton_Click" />
                <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
