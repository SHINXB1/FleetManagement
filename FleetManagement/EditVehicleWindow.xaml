<Window x:Class="FleetManagement.EditVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Vehicle" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="License Plate:" Margin="0,5"/>
        <TextBox x:Name="LicensePlateTextBox" Margin="0,5"/>

        <TextBlock Text="Model:" Margin="0,5"/>
        <TextBox x:Name="ModelTextBox" Margin="0,5"/>

        <TextBlock Text="Manufacturer:" Margin="0,5"/>
        <TextBox x:Name="ManufacturerTextBox" Margin="0,5"/>

        <TextBlock Text="Year of Manufacture:" Margin="0,5"/>
        <TextBox x:Name="YearOfManufactureTextBox" Margin="0,5"/>

        <TextBlock Text="Mileage:" Margin="0,5"/>
        <TextBox x:Name="MileageTextBox" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Save" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>